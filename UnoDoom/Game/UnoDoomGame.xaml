<UserControl
    x:Class="UnoDoom.Game.UnoDoomGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnoDoom.Game"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Black"
    IsTabStop="True"
    mc:Ignorable="d">
    <Grid>
        <Border x:Name="CanvasRoot" />
        <TextBlock
            x:Name="LoadingText"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="30"
            Foreground="White"
            Text="Loading..." />
        <!--  Touch input overlay for mobile devices  -->
        <local:TouchInputOverlay x:Name="TouchOverlay" Visibility="Collapsed" />
        <!--  Small button to show touch overlay when hidden  -->
        <Grid
            x:Name="ShowTouchOverlayButton"
            Width="40"
            Height="40"
            Margin="30,30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#40808080"
            BorderBrush="#80FFFFFF"
            BorderThickness="1"
            CornerRadius="20"
            PointerPressed="ShowTouchOverlayButton_PointerPressed"
            Visibility="Collapsed">
            <FontIcon
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="White"
                Glyph="&#xE7B3;" />
        </Grid>
    </Grid>
</UserControl>
